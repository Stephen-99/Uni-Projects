<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="@dimen/largeText"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/map_width"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/map_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/map_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/map_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/initial_money"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_width" />

    <TextView
        android:id="@+id/initial_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/family_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_height" />

    <TextView
        android:id="@+id/family_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/shop_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/initial_money" />

    <TextView
        android:id="@+id/shop_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/salary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/family_size" />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/tax_rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_size" />

    <TextView
        android:id="@+id/tax_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/service_cost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salary" />

    <TextView
        android:id="@+id/service_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/house_cost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tax_rate" />

    <TextView
        android:id="@+id/house_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/commercial_cost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/service_cost" />

    <TextView
        android:id="@+id/commercial_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toTopOf="@id/road_cost"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house_cost" />

    <TextView
        android:id="@+id/road_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse"
        android:textAlignment="viewStart"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commercial_cost" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Done"
        android:textSize="@dimen/defaultText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>